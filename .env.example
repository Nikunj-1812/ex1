# ==============================================
# MAI-PAEP Environment Configuration
# ==============================================

# ==============================================
# AI API KEYS (Required)
# ==============================================
OPENAI_API_KEY=sk-proj-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-ai-key-here
GROQ_API_KEY=your-groq-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-key-here
MISTRAL_API_KEY=your-mistral-key-here

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL (Analytics & Logs)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=maipaep
POSTGRES_USER=maipaep_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# MongoDB (AI Responses Storage)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=maipaep
MONGODB_USER=maipaep_user
MONGODB_PASSWORD=your-mongodb-password
MONGODB_URL=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${MONGODB_DB}

# Redis (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ==============================================
# VECTOR DATABASE
# ==============================================
# FAISS (Local)
FAISS_INDEX_PATH=./ml/models/faiss_index

# Pinecone (Cloud - Optional)
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=maipaep-vectors

# ==============================================
# SECURITY & AUTHENTICATION
# ==============================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-chars-min

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ==============================================
# API CONFIGURATION
# ==============================================
# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000
API_V1_PREFIX=/api/v1

# Frontend
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ==============================================
# AI MODEL CONFIGURATION
# ==============================================
# Default Models
DEFAULT_GPT_MODEL=gpt-4-turbo-preview
DEFAULT_CLAUDE_MODEL=claude-3-opus-20240229
DEFAULT_GEMINI_MODEL=gemini-pro
DEFAULT_LLAMA_MODEL=llama-3-70b
DEFAULT_MISTRAL_MODEL=mistral-large-latest

# Timeouts (seconds)
AI_REQUEST_TIMEOUT=60
AI_MAX_RETRIES=3

# Token Limits
MAX_PROMPT_TOKENS=4000
MAX_COMPLETION_TOKENS=2000

# ==============================================
# ML MODEL CONFIGURATION
# ==============================================
# Sentence Transformer Model
SBERT_MODEL=all-MiniLM-L6-v2

# Domain Classifier
DOMAIN_CLASSIFIER_MODEL=bert-base-uncased

# Hallucination Detector
HALLUCINATION_MODEL=custom

# Device
ML_DEVICE=cpu  # cpu or cuda

# Batch Size
ML_BATCH_SIZE=32

# ==============================================
# CACHING CONFIGURATION
# ==============================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_AI_RESPONSES=true
CACHE_EVALUATIONS=true

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_PROMETHEUS=false
ENABLE_GRAFANA=false

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# ==============================================
# PERFORMANCE OPTIMIZATION
# ==============================================
# Worker Configuration
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Connection Pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Async Settings
MAX_CONCURRENT_REQUESTS=100

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_WEBSOCKETS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_BIAS_DETECTION=true
ENABLE_HALLUCINATION_DETECTION=true
ENABLE_DOMAIN_CLASSIFICATION=true
ENABLE_SAFETY_WARNINGS=true

# ==============================================
# RESEARCH & ANALYTICS
# ==============================================
SAVE_ALL_PROMPTS=true
SAVE_ALL_RESPONSES=true
ENABLE_ANALYTICS=true
ANONYMIZE_DATA=true

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
DEBUG=false
RELOAD=false
TESTING=false

# ==============================================
# DOCKER CONFIGURATION
# ==============================================
COMPOSE_PROJECT_NAME=maipaep
DOCKER_BUILDKIT=1

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@mai-paep.com

# S3 (Storage - Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=maipaep-storage

# ==============================================
# COST TRACKING
# ==============================================
ENABLE_COST_TRACKING=true
MONTHLY_BUDGET_USD=1000
ALERT_THRESHOLD_PERCENT=80

# ==============================================
# NOTES
# ==============================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env to version control
# 3. Rotate API keys regularly
# 4. Use strong passwords in production
# 5. Enable HTTPS in production
# 6. Set DEBUG=false in production
